#include <iostream>
#include <cstring>

using namespace std;

bool isValidUsername(char username[]) {
    int len = strlen(username);

    // Check if the username is between 6 and 20 characters
    if (len < 6 || len > 20) {
        return false;
    }

    // Check if the username contains only letters, digits, dots, and underscores
    for (int i = 0; i < len; i++) {
        if (!isalnum(username[i]) && username[i] != '.' && username[i] != '_') {
            return false;
        }
    }

    // Check if the username starts with a letter
    if (!isalpha(username[0])) {
        return false;
    }

    // Check if the username ends with a letter or digit
    if (!isalnum(username[len - 1])) {
        return false;
    }

    return true;
}

int main() {
    char username1[21], username2[21];

    // Get the usernames from the user
    cout << "Enter the user name: ";
    cin >> username1;
    cout << "Reenter the user name: ";
    cin >> username2;

    // Check if the usernames are the same
    if (strcmp(username1, username2) != 0) {
        cout << "The usernames do not match.\n";
        return 0;
    }

    // Check if the username is valid
    if (isValidUsername(username1)) {
        cout << "The username is valid.\n";
    } else {
        cout << "The username is not valid.\n";
    }

    return 0;
}
